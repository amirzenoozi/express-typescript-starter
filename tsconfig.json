{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "baseUrl": "./src",
    "rootDir": ".",
    "paths": {
      "src/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "./src/**/*.spec.tsx", "./src/**/*.test.tsx"],
  "include": ["./custom.d.ts", "./src/**/*", "app.ts"]
}
